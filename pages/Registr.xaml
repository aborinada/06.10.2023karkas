<Page x:Class="TourAgentstvo.pages.Registr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TourAgentstvo.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registr">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="25">Регистрация</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox Name="Login"></TextBox>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox Name="Password"></PasswordBox>
            <TextBlock>Подтвердите пароль</TextBlock>
            <PasswordBox Name="ConfirmPassword"></PasswordBox>
            <Button >Зарегистрироваться</Button>
        </StackPanel>
    </Grid>
</Page>
