<Page x:Class="TourAgentstvo.pages.Avtorizacia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TourAgentstvo.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtorizacia">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" FontSize="20">Авторизация</TextBlock>

            <TextBlock VerticalAlignment="Center">Логин</TextBlock>
            <TextBox Name="login" Width="100"></TextBox>

            <TextBlock VerticalAlignment="Center">Пароль</TextBlock>
            <PasswordBox Name="passwordBox" Width="100" PasswordChar="•" />
            <TextBox Name="password" Width="100" Visibility="Collapsed" />
            <CheckBox Name="Check_Pass" Content="Показать пароль" VerticalAlignment="Center"/>
            <Button Click="Vxod">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
